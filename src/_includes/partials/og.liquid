{% assign ogTitle = title %}

{% assign type = "website" %}

{% unless description %}
{% assign description = summary %}
{% endunless %}

<!-- FB OG -->
<meta property="og:url" content="{{ site.baseURL }}{{ page.url }}">
<meta property="og:type" content="{{ type }}">
<meta property="og:title" content="{{ ogTitle }}">
<meta content="https://optimised.email/ogImage.jpg" property="og:image">
<!-- <meta property="og:image:alt" content=""> -->
<meta property="og:description" content="{{ description }}">
<meta property="og:site_name" content="{{ site.title }}">
<meta content="en" property="og:locale">

<!-- TW Graph -->
<meta content="summary_large_image" name="twitter:card">
<meta content="@fershad" name="twitter:creator">
<meta name="twitter:url" content="{{ site.baseURL }}{{ page.url }}">
<meta name="twitter:title" content="{{ ogTitle }}">
<meta name="twitter:description" content="{{ description}}">
<meta content="https://optimised.email/ogImage.jpg" name="twitter:image">
<!-- <meta name="twitter:image:alt" content=""> -->